{{#extends "base"}}

{{#block "title" }}
All Products
{{/block}}

{{#block "content"}}
<div class="mt-3 d-flex justify-content-end">
<a href="/products/create" class="btn btn-success ">Create New Product</a>
</div>
<div>
    <h2>Search for product</h2>
    <form method="GET">
        {{{form}}}
        <input type="submit" class="btn btn-primary mt-3"/>
    </form>
</div>
<h2 class="mt-3">Products</h2>
<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Category</th>
            <th>Cost</th>
            <th>Description</th>
            <th>Tags</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        {{#each products}}
        <tr>
            <td>{{this.name}}</td>
            <td>{{this.category.name}}</td>
            <td>{{this.cost}}</td>
            <td>{{this.description}}</td>
            {{!-- <td>{{this.imageUrl}}</td> --}}
             <td>{{#each this.tags}}
                <span class="badge bg-primary">{{this.name}}</span>
             {{/each}}
             </td>
             <td>
                <a href="/products/{{this.id}}/update"
                    class="btn btn-warning btn-sm"
                >Update</a>
            </td>
             <td>
                <a href="/products/{{this.id}}/delete"
                    class="btn btn-danger btn-sm"
                >Delete</a>
            </td>
        </tr>
        {{/each}}
    </tbody>

</table>

{{/block}}
{{/extends}}